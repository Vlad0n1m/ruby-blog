<h1 class="font-bold text-[32px]">New article</h1>

<%= form_with class: "bg-slate-600 rounded-lg p-8 flex flex-col gap-3 items-center justify-center text-white w-full", model: @article do |form| %>
  <div class="w-full ">
    <%= form.label :title %><br> 
    <%= form.text_field :title, class: "w-full text-black"%>

    <div>
      <% @article.errors.full_messages_for(:title).each do |message| %>
        <div class="text-red-600 "><%= message %></div>
      <% end %>
    </div>
  </div>
  <div class="w-full">
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "w-full text-black" %>
    <div>
      <% @article.errors.full_messages_for(:body).each do |message| %>
        <div class="text-red-600"><%= message %></div>
      <% end %>
    </div>
  </div>
  <div>

      <%= form.submit class: "bg-black text-white rounded-lg p-3 w-[300px] mb-8 cursor-pointer flex items-center justify-center" %>
  </div>
<% end %>



