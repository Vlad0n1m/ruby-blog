<h1 class="font-bold text-[32px]"><%= @article.title %></h1>

<div
  class="
    bg-slate-600
    rounded-lg
    p-8
    flex
    flex-col
    gap-[200px]
    items-center
    justify-center
    text-white
    w-full
  "
>
  <div class="w-full ">

    <p><%= @article.body %></p>
  </div>
  <div class="flex flex-col gap-4">
  <%= link_to(edit_article_path) do %>
    <div
      class="
        bg-black
        text-white
        rounded-lg
        p-3
        w-[300px]
        cursor-pointer
        flex
        items-center
        justify-center
      "
    >Edit</div>
  <% end %>
  <%= link_to(@article, data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                }) do %>
    <div
      class="
        bg-red-600
        text-white
        rounded-lg
        p-3
        w-[300px]
        cursor-pointer
        flex
        items-center
        justify-center
      "
    >Delete</div>
  <% end %>
  </div>

</div>
